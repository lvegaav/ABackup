<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored
        </item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.NavigationView">
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorSwitchActivated</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorSwitchNormal</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorSwitchForeground</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Share" parent="Button">
        <item name="colorButtonNormal">@android:color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Login" parent="Button">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.Borderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button.Borderless.Login" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsMenuOption">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="Contact_us_option">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="Contact_us_option_image">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">fitXY</item>

    </style>
    <style name="RatioCircle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Animation.OptionsDialog" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up_activity</item>
        <item name="android:windowExitAnimation">@anim/slide_down_activity</item>
    </style>
    <style name="Theme.OptionsDialog" parent="Theme.AppCompat.Light">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="Subscription" />
    <style name="Subscription.Item">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/rounded_white_corner_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Subscription.Item.Selected">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="CreditCardText">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
