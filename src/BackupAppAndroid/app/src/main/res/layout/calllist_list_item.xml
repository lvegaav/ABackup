<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/default_list_item_size">

    <ImageView
        android:id="@+id/calllist_item_icon"
        android:layout_width="@dimen/default_list_item_size"
        android:layout_height="@dimen/default_list_item_size"
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:src="@drawable/ic_account_circle"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/default_list_item_size"
        android:padding="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/calllist_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="Juan Perez"
            android:textAppearance="?android:attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/calllist_item_duration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="12:00"
            android:drawableLeft="@drawable/ic_call"
            android:textAppearance="?android:attr/textAppearanceListItem"/>

        <TextView
            android:id="@+id/calllist_item_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="12:00"
            android:drawableLeft="@drawable/ic_call_missed"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceListItem"/>

    </LinearLayout>


</LinearLayout>